@model List<Hospital.DTOs.DoctorDto>
@{
    ViewData["Title"] = "IndexDoc";
}

<h1>IndexDoc</h1>

<div class="container p-4 border">
    <div class="row pb-2">
        <h1>Doctors</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Specialization</th>
                        <th>Experience (Years)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctor in Model)
                    {
                        <tr>
                            <td>@doctor.DocAccCode</td>
                            <td>@doctor.Name</td>
                            <td>@doctor.EadaAccCode</td>
                            <td>@doctor.Code</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

</div>